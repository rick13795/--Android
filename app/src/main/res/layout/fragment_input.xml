<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fkc"
    android:background="@mipmap/cat_beijing">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    </RelativeLayout>
    <RelativeLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragment_input"
        android:layout_marginTop="10dp">

        <ImageButton
            android:id="@+id/input_rice"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/add_biankuang2"
            android:src="@mipmap/fragment_add_rice">
        </ImageButton>
        <ImageButton
            android:id="@+id/input_shop"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="120dp"
            android:background="@drawable/add_biankuang2"
            android:src="@mipmap/fragment_add_shop">
        </ImageButton>
        <ImageButton
            android:id="@+id/input_train"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="230dp"
            android:background="@drawable/add_biankuang2"
            android:src="@mipmap/fragment_add_train">
        </ImageButton>
        <ImageButton
            android:id="@+id/input_yule"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/add_biankuang2"
            android:src="@mipmap/fragment_add_yule">
        </ImageButton>
        <ImageButton
            android:id="@+id/input_huazhuang"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="70dp"
            android:background="@drawable/add_biankuang2"
            android:src="@mipmap/fragment_add_huazhuang">
        </ImageButton>
        <ImageButton
            android:id="@+id/input_zhufang"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="230dp"
            android:layout_marginTop="70dp"
            android:background="@drawable/add_biankuang2"
            android:src="@mipmap/fragment_add_zhufang">
        </ImageButton>
        <ImageButton
            android:id="@+id/input_fushi"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="70dp"
            android:background="@drawable/add_biankuang2"
            android:src="@mipmap/fragment_add_fushi">
        </ImageButton>
        <ImageButton
            android:id="@+id/input_shejiao"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="70dp"
            android:background="@drawable/add_biankuang2"
            android:src="@mipmap/fragment_add_shejiao">
        </ImageButton>
        <ImageButton
            android:id="@+id/input_tongxin"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="150dp"
            android:background="@drawable/add_biankuang2"
            android:src="@mipmap/fragment_add_tongxin">
        </ImageButton>
        <ImageButton
            android:id="@+id/input_xuexi"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="150dp"
            android:background="@drawable/add_biankuang2"
            android:src="@mipmap/fragment_add_xuexi">
        </ImageButton>
        <ImageButton
            android:id="@+id/input_chongwu"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="230dp"
            android:layout_marginTop="150dp"
            android:background="@drawable/add_biankuang2"
            android:src="@mipmap/fragment_add_chongwu">
        </ImageButton>
        <ImageButton
            android:id="@+id/input_shuma"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="150dp"
            android:background="@drawable/add_biankuang2"
            android:src="@mipmap/fragment_add_shuma">
        </ImageButton>
        <RelativeLayout
            android:background="#F7D878"
            android:layout_marginTop="230dp"
            android:layout_width="match_parent"
            android:layout_height="350dp">

            <EditText
                android:id="@+id/input_finish"
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/add_biankuang"
                android:hint="点击写备注"
                android:singleLine="true">
            </EditText>

            <TextView
                android:id="@+id/input_add"
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/add_biankuang"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text=""></TextView>

            <Button
                android:id="@+id/number_1"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="20dp"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:text="1"
                android:background="@drawable/add_biankuang">
            </Button>
            <Button
                android:id="@+id/number_2"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="110dp"
                android:layout_width="80dp"
                android:text="2"
                android:layout_height="50dp"
                android:background="@drawable/add_biankuang">
            </Button>
            <Button
                android:id="@+id/number_3"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="200dp"
                android:layout_width="80dp"
                android:text="3"
                android:layout_height="50dp"
                android:background="@drawable/add_biankuang">
            </Button>
            <ImageButton
                android:id="@+id/rili1"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="290dp"
                android:layout_width="80dp"
                android:src="@mipmap/mingxi_rili"
                android:layout_height="50dp"
                android:background="@drawable/add_biankuang">
            </ImageButton>
            <Button
                android:id="@+id/number_4"
                android:layout_marginTop="120dp"
                android:layout_marginLeft="20dp"
                android:layout_width="80dp"
                android:text="4"
                android:layout_height="50dp"
                android:background="@drawable/add_biankuang">
            </Button>
            <Button
                android:id="@+id/number_5"
                android:layout_marginTop="120dp"
                android:layout_marginLeft="110dp"
                android:layout_width="80dp"
                android:text="5"
                android:layout_height="50dp"
                android:background="@drawable/add_biankuang">
            </Button>
            <Button
                android:id="@+id/number_6"
                android:layout_marginTop="120dp"
                android:layout_marginLeft="200dp"
                android:layout_width="80dp"
                android:text="6"
                android:layout_height="50dp"
                android:background="@drawable/add_biankuang">
            </Button>
            <ImageButton
                android:layout_marginTop="120dp"
                android:layout_marginLeft="290dp"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:src="@mipmap/add_add"
                android:background="@drawable/add_biankuang">
            </ImageButton>
            <Button
                android:id="@+id/number_7"
                android:layout_marginTop="180dp"
                android:layout_marginLeft="20dp"
                android:layout_width="80dp"
                android:text="7"
                android:layout_height="50dp"
                android:background="@drawable/add_biankuang">
            </Button>
            <Button
                android:id="@+id/number_8"
                android:layout_marginTop="180dp"
                android:layout_marginLeft="110dp"
                android:layout_width="80dp"
                android:text="8"
                android:layout_height="50dp"
                android:background="@drawable/add_biankuang">
            </Button>
            <Button
                android:id="@+id/number_9"
                android:layout_marginTop="180dp"
                android:layout_marginLeft="200dp"
                android:layout_width="80dp"
                android:text="9"
                android:layout_height="50dp"
                android:background="@drawable/add_biankuang">
            </Button>
            <ImageButton
                android:layout_marginTop="180dp"
                android:layout_marginLeft="290dp"
                android:layout_width="80dp"
                android:src="@mipmap/add_delete1"
                android:layout_height="50dp"
                android:background="@drawable/add_biankuang">
            </ImageButton>
            <Button
                android:id="@+id/finish"
                android:layout_marginTop="240dp"
                android:layout_marginLeft="290dp"
                android:layout_width="80dp"
                android:text="完成"
                android:textColor="#ffffff"
                android:layout_height="50dp"
                android:background="@drawable/add_biankuang1">
            </Button>
            <ImageButton
                android:layout_marginTop="240dp"
                android:layout_marginLeft="200dp"
                android:layout_width="80dp"
                android:src="@mipmap/add_delete"
                android:layout_height="50dp"
                android:background="@drawable/add_biankuang">
            </ImageButton>
            <Button
                android:id="@+id/number_0"
                android:layout_marginTop="240dp"
                android:layout_marginLeft="110dp"
                android:layout_width="80dp"
                android:text="0"
                android:layout_height="50dp"
                android:background="@drawable/add_biankuang">
            </Button>
            <Button
                android:id="@+id/deletein"
                android:layout_marginTop="240dp"
                android:layout_marginLeft="20dp"
                android:layout_width="80dp"
                android:text="清除"
                android:layout_height="50dp"
                android:background="@drawable/add_biankuang">
            </Button>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>