<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_mingxi"
    android:background="@mipmap/cat_beijing">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp">
        <ImageButton
            android:id="@+id/add_forback"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"
            android:background="@mipmap/forback">
        </ImageButton>
        <Button
            android:id="@+id/add_output"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginLeft="100dp"
            android:gravity="center"
            android:text="收入"
            android:textColor="#000000"
            android:layout_marginTop="50dp">
        </Button>
        <Button
            android:id="@+id/add_input"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="100dp"
            android:gravity="center"
            android:text="支出"
            android:textColor="#000000"
            android:layout_marginTop="50dp">
        </Button>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fragment_add"
        android:layout_width="match_parent"
        android:layout_height="629dp"
        android:layout_marginTop="10dp"></FrameLayout>
</LinearLayout>